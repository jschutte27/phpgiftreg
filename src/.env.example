# Database Configuration
DB_CONNECTION_STRING=mysql:host=localhost;dbname=giftreg
DB_USERNAME=giftreg
DB_PASSWORD=your_secure_password_here

# Application Settings
EVENT_THRESHOLD=60
SHOP_REQUIRES_APPROVAL=1
NEWUSER_REQUIRES_APPROVAL=1
ANONYMOUS_PURCHASING=0
ITEMS_PER_PAGE=10

# Email Configuration
EMAIL_FROM=webmaster@yourdomain.com
EMAIL_REPLY_TO=noreply@yourdomain.com
EMAIL_XMAILER=PHP/8.0

# SMTP Configuration (leave empty or set SMTP_ENABLED=0 to use PHP mail() instead)
SMTP_ENABLED=0
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_AUTH=1
SMTP_SECURE=tls
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password_here

# For Gmail: Use App Passwords (https://support.google.com/accounts/answer/185833)
# For Office 365: smtp.office365.com:587
# For SendGrid: smtp.sendgrid.net:587
# For AWS SES: email-smtp.region.amazonaws.com:587

# SMTP Provider Examples (uncomment and fill in your credentials):

# Gmail (App Password required)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_AUTH=1
# SMTP_SECURE=tls
# SMTP_USERNAME=your_email@gmail.com
# SMTP_PASSWORD=your_16_char_app_password

# Mailjet (https://app.mailjet.com/account/api_keys)
# SMTP_HOST=in-v3.mailjet.com
# SMTP_PORT=587
# SMTP_AUTH=1
# SMTP_SECURE=tls
# SMTP_USERNAME=your_mailjet_api_key
# SMTP_PASSWORD=your_mailjet_secret_key

# Office 365
# SMTP_HOST=smtp.office365.com
# SMTP_PORT=587
# SMTP_AUTH=1
# SMTP_SECURE=tls
# SMTP_USERNAME=your_office365_email@company.com
# SMTP_PASSWORD=your_office365_password

# SendGrid (https://app.sendgrid.com/settings/api_keys)
# SMTP_HOST=smtp.sendgrid.net
# SMTP_PORT=587
# SMTP_AUTH=1
# SMTP_SECURE=tls
# SMTP_USERNAME=apikey
# SMTP_PASSWORD=your_sendgrid_api_key

# AWS SES (Simple Email Service)
# SMTP_HOST=email-smtp.region.amazonaws.com
# SMTP_PORT=587
# SMTP_AUTH=1
# SMTP_SECURE=tls
# SMTP_USERNAME=your_ses_username
# SMTP_PASSWORD=your_ses_password

# Brevo (formerly Sendinblue)
# SMTP_HOST=smtp-relay.brevo.com
# SMTP_PORT=587
# SMTP_AUTH=1
# SMTP_SECURE=tls
# SMTP_USERNAME=your_brevo_email@example.com
# SMTP_PASSWORD=your_brevo_smtp_key


# User Interface Settings
SHOW_HELPTEXT=0
CONFIRM_ITEM_DELETES=0
ALLOW_MULTIPLES=1
CURRENCY_SYMBOL=$
DATE_FORMAT=m/d/Y
SHOW_OWN_EVENTS=1
HIDE_ZERO_PRICE=1

# Database Configuration
TABLE_PREFIX=

# Security Settings
PASSWORD_LENGTH=10
MIN_PASSWORD_LENGTH=8
PASSWORD_HASHER=BCRYPT
SESSION_TIMEOUT=3600

# Google OAuth Settings
GOOGLE_OAUTH_ENABLED=0
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_REDIRECT_URI=http://localhost:8080/oauth/google/callback.php

# File Upload Settings
ALLOW_IMAGES=1
IMAGE_SUBDIR=item_images

# Notification Settings
NOTIFY_THRESHOLD_MINUTES=60

# Security Note: 
# Copy this file to .env and update the values for your environment
# Make sure .env is included in your .gitignore file
# Never commit actual credentials to version control

# Available Currency Symbols:
# $ = US Dollar (default)
# &#163; = British Pound
# &#165; = Japanese Yen
# &#8364; = Euro
# &euro; = Euro (alternative)

# Available Password Hashers:
# BCRYPT = Recommended (default)
# SHA1 = Legacy support
# MD5 = Legacy support (not recommended)
# (empty) = Plain text (never use in production)

# Boolean Values:
# Use 1 for true/enabled, 0 for false/disabled